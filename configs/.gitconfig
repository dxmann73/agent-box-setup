[user]
    name = David Mann
    email = dxmann73@gmail.com

[core]
    autocrlf = input
    editor = cursor --wait
    pager = less -F -X

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    pf = push --force
    lg = log --oneline --graph --decorate
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend --no-edit

[credential]
    helper = store
